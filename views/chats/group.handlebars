<head>
  <link rel="stylesheet" href="../css/chat.css" />
</head>
<body>
  <div class="container">
	<div class="row">
	  <div class="col-9">
		<h1>Welcome to Group chat</h1>
		
	  </div>
	  <div class="col-3">
		<i data-toggle="modal" data-target="#quamai" class="fas fa-plus mr-2" style="font-size: 23px; color: black;"></i>Add Members
		<div id="quamai" class="modal fade" role="form">
			<div class="modal-dialog">
				<!-- Modal content-->
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title">Type Your Friend's ID.</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<div class="modal-body">
						<form>
							<input type="text" name="" id="addFriendsId">
						</form>
				
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal" id="add">Add</button>
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
	  </div>
		
	  <div class="col-9 mt-4">

		<section id="chatroom">
		  <p class="message"><b>Welcome to Group {{gname}}!</b></p>
		  <section id="feedback"></section>
		</section>

		<section id="input_zone"> 
		  <input id="message" class="vertical-align" type="text" />
		  <button id="send_message" class="vertical-align" type="button">Send</button>
		  <!--<button id="send_message" class="vertical-align" type="button">Invite</button>
		  <div style="    width: 100%;
		  height: 60vh;
		  display: flex;
		  border: 2px solid black;
		  justify-content: center;
		  align-items: center;">
			<p>You have currently no chats</p>
			
		  </div>-->
		</section>
	  </div>
	  <div class="col-3 mt-4">

		<div class="row members"></div>
	  </div>
	</div>
  </div>
  <script src="/js/bootbox.min.js"></script>

  <script src="http://code.jquery.com/jquery-latest.min.js"></script>
  <script src="/js/chat/chat.js" type="module"></script>
</body>