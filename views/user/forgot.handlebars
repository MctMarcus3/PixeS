<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/logo.png">
			<h3 class="text-center">Forgot Password</h3>
			<form method="POST" action="user/showForgot">
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" id="email" name="email" class="form-control" required>
				</div>
				<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Submit</button>

				<div id="myModal" class="modal fade" role="dialog">
					<div class="modal-dialog">

						<!-- Modal content-->
						<div class="modal-content">
							<div class="modal-header">
								<h4 class="modal-title">Check Your Email.</h4>
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<div class="modal-body">
								<p>A link has been sent to youe email.</p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-default" data-dismiss="modal" onClick="window.location.href='/';">Close</button>
							</div>
						</div>

					</div>
				</div>
			</form>
		</div>
	</div>
</div>