<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/logo.png">
			<h3 class="text-center">Password Change</h3>
			<form action="/user/changePw" method="post">
			<div class="form-group">
				<label for="password">Existing Password</label>
				<input type="password" name="extPassword" class="form-control" value="" required>
			</div>
            <div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" class="form-control" value="" required>
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password</label>
					<input type="password" name="password2" class="form-control" value="" required>
				</div>
				<button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Submit</button>

				<div id="myModal" class="modal fade" role="dialog">
					<div class="modal-dialog">

						<!-- Modal content-->
						<div class="modal-content">
							<div class="modal-header">
								<h4 class="modal-title">Change of Password.</h4>
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<div class="modal-body">
								<p>Your password has been changed.</p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-default" data-dismiss="modal" onClick="window.location.href='/showProfile';">Close</button>
							</div>
						</div>

					</div>
				</div>
            </form>
        </div>
    </div>
</div>